@page "/flash-sale"
@rendermode InteractiveServer
@using NovellaMart.Core.BL.Model_Classes
@using NovellaMart.Core.BL.Services
@inject FlashSaleService FlashSaleService

<!-- 1. Header (Matches Cart Page) -->
<div class="page-title">
    <h1 style="color:black;">Flash Sale Live</h1>
    <div class="title-underline"></div>
    <p class="title-subtext">
        <i class="fas fa-clock me-1"></i> Ends in: <span style="font-weight:700; color:#333;">01:45:22</span>
    </p>
</div>

<div class="container mb-5">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @{
            var sale = FlashSaleService.GetActiveSale();
            var node = sale?.fs_items?.head;
        }
        @while (node != null)
        {
            var product = node.Data;
            bool isJoined = joinedProductIds.Contains(product.product_id);

            <div class="col">
                <!-- 2. Card Style (Matches Cart Card with Cyan Top Border) -->
                <div class="cart-card h-100 p-3 d-flex flex-column align-items-center position-relative"
                     style="padding: 1.5rem !important; transition: transform 0.2s;">

                    <!-- 3. Image Frame (Matches Cart Image Style) -->
                    <div class="img-frame mb-3" style="width: 100%; height: 180px; display: flex; align-items: center; justify-content: center; background: white;">
                        <img src="@product.images[0]" style="max-height: 140px; max-width: 90%; object-fit: contain;" />

                        <!-- Hot Badge -->
                        <span class="badge rounded-pill"
                              style="position: absolute; top: 15px; right: 15px; background: linear-gradient(45deg, #ff3333, #ff6b6b); font-size: 0.7rem; box-shadow: 0 2px 5px rgba(0,0,0,0.2);">
                            HOT
                        </span>
                    </div>

                    <!-- Product Info -->
                    <div class="text-center w-100 d-flex flex-column flex-grow-1">
                        <!-- Title -->
                        <h5 style="font-size: 1rem; font-weight: 700; color: #444; height: 2.4em; overflow: hidden; margin-bottom: 0.5rem;">
                            @product.name
                        </h5>

                        <!-- Price (Black text like Cart) -->
                        <div class="mb-2">
                            <span style="text-decoration: line-through; color: #bbb; font-size: 0.9rem; margin-right: 5px;">Rs. @(product.price * 2)</span>
                            <span style="color: #000; font-weight: 700; font-size: 1.2rem;">Rs. @product.price</span>
                        </div>

                        <!-- Stock Bar -->
                        <div class="mt-auto w-100">
                            <div class="d-flex justify-content-between mb-1" style="font-size: 0.7rem; font-weight: 700; color: #666; text-transform: uppercase;">
                                <span>Stock Left</span>
                                <span class="text-danger">@product.stock</span>
                            </div>
                            <div class="progress mb-3" style="height: 6px; border-radius: 10px; background-color: #f0f0f0;">
                                <div class="progress-bar" style="width: @(product.stock > 0 ? "60%" : "0%"); background: linear-gradient(90deg, var(--nm-primary), var(--nm-accent)); border-radius: 10px;"></div>
                            </div>

                            <!-- 4. Button Logic: Changes Text & Style if Joined -->
                            @if (isJoined)
                            {
                                <button class="btn w-100 py-2"
                                        style="margin-top: 0; font-size: 0.9rem; padding: 0.8rem; background-color: #28a745; color: white; border: none; border-radius: 30px; font-weight: 600; cursor: default;"
                                        disabled>
                                    <i class="fas fa-check me-1"></i> JOINED QUEUE (#@FlashSaleService.GetQueuePosition(999, product.product_id))
                                </button>
                            }
                            else
                            {
                                <button class="btn-checkout-glow w-100 py-2"
                                        style="margin-top: 0; font-size: 0.9rem; padding: 0.8rem;"
                                        @onclick="() => JoinQueue(product.product_id)">
                                    <i class="fas fa-bolt me-1"></i> JOIN QUEUE
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
            node = node.Next;
        }
    </div>
</div>

@code {
    private List<int> joinedProductIds = new List<int>();

    private void JoinQueue(int productId)
    {
        // Mock User ID for demonstration
        var user = new CustomerBL { user_id = 999, firstName = "Test User" };
        FlashSaleService.JoinFlashSaleQueue(user, productId);
        joinedProductIds.Add(productId);
        StateHasChanged();
    }
}