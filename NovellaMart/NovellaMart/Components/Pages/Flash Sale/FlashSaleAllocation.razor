@page "/admin/flash-sale-allocation/{Id:int}"
@rendermode InteractiveServer
@using NovellaMart.Core.BL.Model_Classes
@using NovellaMart.Core.BL.Services
@inject FlashSaleAllocationService AllocationService
@inject FlashSaleCrudService CrudService
@implements IDisposable

<div class="page-title">
    <h1 style="color: var(--nm-primary);">Flash Sale Allocation</h1>
    <div class="title-underline"></div>
    <p class="title-subtext">View results for: <b>@saleTitle</b></p>
</div>

<div class="container admin-container" style="max-width: 900px; padding-bottom: 80px;">
    <div class="row">
        @foreach (var product in CrudService.GetAllFlashSales().FirstOrDefault(s => s.flash_sale_id == Id)?.fs_items?.ToList() ?? new())
        {
            bool isExpanded = expandedProductId == product.product_id;
            var allocations = LiveSaleService.GetQueueSnapshotAllocation(product.product_id);
            var winners = allocations.Where(a => a.allocated).ToList();

            <div class="col-12 mb-3">
                <div class="checkout-card p-0 overflow-hidden shadow-sm @(isExpanded ? "admin-card-expanded" : "admin-card-default")"
                     style="transition: all 0.3s ease; background: white;">

                    <div class="d-flex align-items-center justify-content-between p-3"
                         style="cursor: pointer;"
                         @onclick="() => Toggle(product.product_id)">

                        <div class="d-flex align-items-center">
                            <div class="admin-product-img-wrapper me-3">
                                <img src="@product.images[0]" alt="@product.name" />
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold" style="color: #333;">@product.name</h6>
                                <span class="badge bg-light text-muted border">Winners: @winners.Count</span>
                            </div>
                        </div>

                        <button class="btn @(isExpanded ? "btn-admin-close" : "btn-admin-toggle")">
                            @(isExpanded ? "Close" : "View Results")
                        </button>
                    </div>

                    @if (isExpanded)
                    {
                        <div class="p-0 bg-white border-top animate-dropdown">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="admin-table-thead">
                                        <tr>
                                            <th class="col-serial">#</th>
                                            <th>Customer ID</th>
                                            <th>Request Time</th>
                                            <th class="col-status">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (!winners.Any())
                                        {
                                            <tr>
                                                <td colspan="4">
                                                    <div class="empty-queue-container">
                                                        <i class="fas fa-inbox empty-drawer-icon"></i>
                                                        <span class="empty-text">No users were allocated for this product.</span>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            int rank = 1;
                                            @foreach (var req in winners)
                                            {
                                                <tr>
                                                    <td class="col-serial">
                                                        <span class="queue-serial">#@rank</span>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <i class="fas fa-user-circle me-2 icon-user-id"></i>
                                                            <span class="fw-bold">@req.customer.user_id</span>
                                                        </div>
                                                    </td>
                                                    <td class="join-time-text">@req.requestTime.ToLongTimeString()</td>
                                                    <td class="col-status">
                                                        <span class="badge rounded-pill status-badge-allocated">
                                                            <i class="fas fa-check me-1"></i> Allocated
                                                        </span>
                                                    </td>
                                                </tr>
                                                rank++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@code {
    [Inject] FlashSaleService LiveSaleService { get; set; }
    [Parameter] public int Id { get; set; }
    private int expandedProductId = -1;
    private string saleTitle = "Loading...";
    private System.Timers.Timer? _autoRefresh;

    protected override void OnInitialized()
    {
        var sale = CrudService.GetAllFlashSales().FirstOrDefault(s => s.flash_sale_id == Id);
        if (sale != null) saleTitle = sale.title;

        // Refresh this page every 5 seconds to clear out expired winners
        _autoRefresh = new System.Timers.Timer(5000);
        _autoRefresh.Elapsed += async (s, e) => await InvokeAsync(StateHasChanged);
        _autoRefresh.Start();
    }

    public void Dispose() => _autoRefresh?.Dispose();
    private void Toggle(int productId) => expandedProductId = expandedProductId == productId ? -1 : productId;
}