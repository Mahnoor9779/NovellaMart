@page "/admin/flash-sale-allocation"
@rendermode InteractiveServer

@using NovellaMart.Core.BL.Model_Classes
@using NovellaMart.Core.BL.Services
@inject FlashSaleAllocationService AllocationService

<div class="page-title">
    <h1 style="color: var(--nm-primary);">Flash Sale Allocation</h1>
    <div class="title-underline"></div>
    <p class="title-subtext">View allocation results for each flash sale product</p>
</div>

<div class="container admin-container" style="max-width: 900px; padding-bottom: 80px;">

    <div class="mb-4 d-flex justify-content-between align-items-center">
        <h5 class="fw-bold mb-0" style="color: #333;">Active Sale Items</h5>
        <span class="badge bg-success shadow-sm">
            <i class="fas fa-circle me-1" style="font-size: 0.5rem;"></i> Live System
        </span>
    </div>

    <div class="row">
        @foreach (var product in AllocationService.GetSaleProducts())
        {
            bool isExpanded = expandedProductId == product.product_id;

            <div class="col-12 mb-3">
                <div class="checkout-card p-0 overflow-hidden shadow-sm @(isExpanded ? "admin-card-expanded" : "admin-card-default")"
                     style="transition: all 0.3s ease; background: transparent;">

                    <!-- Product Row -->
                    <div class="d-flex align-items-center justify-content-between p-3"
                         style="cursor: pointer;"
                         @onclick="() => Toggle(product.product_id)">

                        <div class="d-flex align-items-center">
                            <div class="admin-product-img-wrapper me-3">
                                <img src="@product.images[0]" alt="@product.name" />
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold" style="color: #333;">@product.name</h6>
                                <div class="d-flex gap-2 mt-1">
                                    <span class="badge bg-light text-muted border">Stock: @product.stock</span>
                                    <span class="badge bg-light text-muted border">Queue: @AllocationService.GetQueueCountForProduct(product.product_id)</span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex align-items-center gap-3">
                            <button class="btn @(isExpanded ? "btn-admin-close" : "btn-admin-toggle")">
                                @(isExpanded ? "Close" : "View Allocations")
                            </button>
                        </div>
                    </div>

                    <!-- Expanded Allocations -->
                    @if (isExpanded)
                    {
                        <div class="p-4 bg-white border-top animate-dropdown" style="border-top: 1px dashed var(--nm-secondary);">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="admin-table-thead">
                                        <tr>
                                            <th>#</th>
                                            <th>Customer ID</th>
                                            <th>Request Time</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var allocations = AllocationService.GetAllocationsForProduct(product.product_id);
                                            int i = 1;
                                        }

                                        @if (allocations.Count == 0)
                                        {
                                            <tr>
                                                <td colspan="4" class="text-center text-muted py-4">No allocations yet</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            @foreach (var req in allocations)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@req.customer.user_id</td>
                                                    <td>@req.requestTime.ToLongTimeString()</td>
                                                    <td>
                                                        <span class="status @(req.allocated ? "allocated" : "rejected")">
                                                            @(req.allocated ? "Allocated" : "Rejected")
                                                        </span>
                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@code {
    private int expandedProductId = -1;

    private void Toggle(int productId)
    {
        expandedProductId = expandedProductId == productId ? -1 : productId;
    }
}

